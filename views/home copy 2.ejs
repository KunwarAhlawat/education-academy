                                    <ul class="right-text">
 
                                            <li><i class="bi bi-check-square"></i><span><strong>Lectures :</strong>
                                                <%= course.lecturesCount %>
                                                </span></li>

                                       

               
                                    </ul>


                                </div>
                             
                            </div>
                            <div class="course-item-price">
                                <!-- <p>Course Price</p> -->
                                <ul>
                                    <li>
                                     <strong>Rs :</strong>   <%= course.regularPrice %> /-
                                    </li>
                                         <% if(course.discountedPrice !== undefined && course.discountedPrice !== null && parseInt(course.discountedPrice) !== 0 &&  course.discountedPrice  !== "") { %>
                                            <li class="badge text-bg-dark">
                                                  <strong>Rs :</strong> <%= course.discountedPrice %>  
                                                </li>
                                        <% } else { %>
                                            <div></div>
                                        <% } %>
                                  
                                    
                                    
                                </ul>
                            </div>
                            <hr>
                            <div class="course-item-button">
                                <a href="/admin/course_view/<%= course.courseId %>"> <button
                                    class="exploreNow">Explore</button></a>
                                <a href="/order/<%= course.courseId %>"> <button class="buyNow">Buy
                                        Now</button></a>

                            </div>

                        </div>
                    </div>
                    <% }) %>
                    <% } else { %>
                        <div class="mx-auto w-100">No data found</div>
                    <% } %>


            </div>

            <!-- offline pagination -->
            <!-- Offline Courses Pagination -->
<nav aria-label="...">
    <ul class="pagination">
        <% if (offlinePagination.currentPage > 1) { %>
            <li class="page-item">
                <a class="page-link" href="?offlinePage=<%= offlinePagination.currentPage - 1 %>&offlinePageSize=<%= offlinePagination.pageSize %>">Previous</a>
            </li>
        <% } else { %>
            <li class="page-item disabled">
                <a class="page-link">Previous</a>
            </li>
        <% } %>

        <% for (let i = 1; i <= offlinePagination.totalPages; i++) { %>
            <li class="page-item <%= (i === offlinePagination.currentPage) ? 'active' : '' %>">
                <a class="page-link" href="?offlinePage=<%= i %>&offlinePageSize=<%= offlinePagination.pageSize %>"><%= i %></a>
            </li>
        <% } %>

        <% if (offlinePagination.currentPage < offlinePagination.totalPages) { %>
            <li class="page-item">
                <a class="page-link" href="?offlinePage=<%= offlinePagination.currentPage + 1 %>&offlinePageSize=<%= offlinePagination.pageSize %>">Next</a>
            </li>
        <% } else { %>
            <li class="page-item disabled">
                <a class="page-link">Next</a>
            </li>
        <% } %>
    </ul>
</nav>
        </div>
    </section>
    <!-- course area end -->


