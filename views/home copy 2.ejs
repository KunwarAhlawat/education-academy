 <!-- course area start(online) -->
    <section class="home-course-area online section-padding">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="section-title">
                        <h2 class="mb-2">ONLINE COURSES</h2>
                        <p class="section-subtitle">Education Academy is preparing students for their dream job. Scroll down to discover the specific preparation you need</p>

                    </div>
                </div>
            </div>
            <div class="row ">

                <% if(onlineCourses && onlineCourses.length !== 0) { %>
            
                <% onlineCourses.forEach(course=> { %>
                    <div class="col-md-4">
                        <div class="course-item">
                            <div class="course-item-img">
                                <img src="<%= course.imageSrc %>" alt="" class="img-fluid">
                            </div>
                            <div class="course-item-text">
                                <div class="course-title">
                                <h5>
                                    <%= course.title %>
                                </h5>
                            </div>
                                <p>
                                    Details
                                </p>
                                <div class="included-text mt-3 ">
                                    <ul class="left-text">
                                   

                                            <li><i class="bi bi-check-square"></i><span><strong>Duration :</strong>
                                                    <%= course.duration %> 
                                                </span> </li>
                                                <li><i class="bi bi-check-square"></i><span><strong>Study Mode :</strong>
                                                    <%= course.studyMode %> 
                                                </span> </li>
                                            
                                    </ul>
                                    <ul class="right-text">
 
                                            <li><i class="bi bi-check-square"></i><span><strong>Lectures :</strong>
                                                <%= course.lecturesCount %>
                                                </span></li>

                                       

               
                                    </ul>


                                </div>
                             
                            </div>
                            <div class="course-item-price">
                                <!-- <p>Course Price</p> -->
                                <ul>
                                    <li>
                                     <strong>Rs :</strong>   <%= course.regularPrice %> /-
                                    </li>
                                         <% if(!course.discountedPrice  && parseInt(course.discountedPrice) !== undefined && parseInt(course.discountedPrice) !== null &&  course.discountedPrice  !== "" && parseInt(course.discountedPrice) !== 0) { %>
                                            <li class="badge text-bg-dark">
                                                  <strong>Rs :</strong> <%= course.discountedPrice %>  
                                                </li>
                                        <% } else { %>
                                            <div></div>
                                        <% } %>
                                  
                                    
                                    
                                </ul>
                            </div>
                            <hr>
                            <div class="course-item-button">
                                <a href="/admin/course_view/<%= course.courseId %>"> <button
                                    class="exploreNow">Explore</button></a>
                                <a href="/order/<%= course.courseId %>"> <button class="buyNow">Buy
                                        Now</button></a>

                            </div>

                        </div>
                    </div>
                    <% }) %>
                    <% } else { %>
                        <div class="mx-auto w-100">No data found</div>
                    <% } %>


                <!--  pagination -->
                    <nav aria-label="...">
                        <ul class="pagination">
                            <% if (onlinePagination.currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?onlinePage=<%= onlinePagination.currentPage - 1 %>&onlinePageSize=<%= onlinePagination.pageSize %>">Previous</a>
                                </li>
                            <% } else { %>
                                <li class="page-item disabled">
                                    <a class="page-link">Previous</a>
                                </li>
                            <% } %>

                            <% for (let i = 1; i <= onlinePagination.totalPages; i++) { %>
                                <li class="page-item <%= (i === onlinePagination.currentPage) ? 'active' : '' %>">
                                    <a class="page-link" href="?onlinePage=<%= i %>&onlinePageSize=<%= onlinePagination.pageSize %>"><%= i %></a>
                                </li>
                            <% } %>

                            <% if (onlinePagination.currentPage < onlinePagination.totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?onlinePage=<%= onlinePagination.currentPage + 1 %>&onlinePageSize=<%= onlinePagination.pageSize %>">Next</a>
                                </li>
                            <% } else { %>
                                <li class="page-item disabled">
                                    <a class="page-link">Next</a>
                                </li>
                            <% } %>
                        </ul>
                    </nav>


            </div>
        </div>


        <!-- offline course -->
        <div class="container mt-5">
            <div class="row">
                <div class="col">
                    <div class="section-title">
                        <h2 class="mb-2">OFFLINE COURSES</h2>
