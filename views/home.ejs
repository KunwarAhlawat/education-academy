
 <%- include('partials/header.ejs')%>
<!-- banner area start -->
 
<div class="owl-carousel owl-theme">
    <% courseData.banner.forEach(image => { %>
 
    <div class="item">
        <img  height="250" style="object-fit: cover;"  src="<%= image.imgSrc %>" class="d-block w-100 object-fit-cover d-none d-md-block" alt="...">
        <img height="200" style="object-fit: contain;"  src="<%= image.imgSrc2 %>" class="d-block w-100 object-fit-cover d-block d-md-none" alt="...">

    </div>
    <% }) %>
 
</div>
 
<!-- banner area end -->
    <!-- about-area-start -->
    <section class="home-about-area ">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="home-about-text">
                        <h1><span>India's Biggests</span> and Most <span>Reliable</span> Learning Source</h1>
                        <p class="section-subtitle1">Maximize your learning experience by choosing Education Academy
                            committed to providing affordable and effective education.</p>

                        <ul>
                            <li><i class="bi bi-check-square-fill"></i>Free Library</li>
                            <li><i class="bi bi-check-square-fill"></i>Hostel</li>
                            <li><i class="bi bi-check-square-fill"></i>Wifi</li>
                            <li><i class="bi bi-check-square-fill"></i>Cafeteria</li>
                        </ul>
                        <button class="primary-button " data-bs-toggle="modal" data-bs-target="#leadModal">Get
                            Started</button>
                    </div>
                </div>
                <div class="col-md-6 d-none d-md-block mt-3 mt-md-0">
                    <img src="../assets/img/2.home/2.about-section/about.png" class="img-fluid" alt="">
                </div>
            </div>
        </div>
    </section>
    <!-- about-area-start -->

    <!-- stat section start -->
    <section class="home-stat-area">
        <div class="container">
            <div class="row">
                <div class="col-md-3 ">
                    <div class="home-stat-item">
                        <i class="bi bi-camera-video"></i>
                        <div class="item-text">
                            <h5>Daily Live</h5>
                            <p class="section-subtitle2">Q&A Sessions</p>
                        </div>

                    </div>
                </div>
                <div class="col-md-3 mt-3 mt-md-0">
                    <div class="home-stat-item">
                        <i class="bi bi-book"></i>
                        <div class="item-text">
                            <h5>Resources</h5>
                            <p class="section-subtitle2">Notes, Exercises</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mt-3 mt-md-0">
                    <div class="home-stat-item">
                        <i class="bi bi-award"></i>
                        <div class="item-text">
                            <h5>Online/Offline</h5>
                            <p class="section-subtitle2">Interactive classes</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mt-3 mt-md-0">
                    <div class="home-stat-item">
                        <i class="bi bi-question-lg"></i>
                        <div class="item-text">
                            <h5>24 * 7</h5>
                            <p class="section-subtitle2">Guidance on Doubts</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- stat section end -->

    <!-- course area start(online) -->
    <section class="home-course-area online section-padding">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="section-title">
                        <h2 class="mb-2">ONLINE COURSES</h2>
                        <p class="section-subtitle">Education Academy is preparing students for their dream job. Scroll down to discover the specific preparation you need</p>

                    </div>
                </div>
            </div>
            <div class="row ">

                <% courseData.courseList.forEach(course=> { %>
                    <div class="col-md-4">
                        <div class="course-item">
                            <div class="course-item-img">
                                <img src="<%= course.onlineCourse.imgSrc2 %>" alt="" class="img-fluid">
                            </div>
                            <div class="course-item-text">
                                <h5>
                                    <%= course.onlineCourse.title2 %>
                                </h5>
                                <!-- <p>
                                    <%= course.courseListPage.details2 %>
                                </p> -->
                                <div class="included-text mt-3 ">
                                    <ul class="left-text">
                                        <% course.onlineCourse.includedText.left.forEach(item=> { %>

                                            <li><i class="<%= item.icon %>"></i><span>
                                                    <%= item.text %>
                                                </span> </li>

                                            <% }) %>
                                    </ul>
                                    <ul class="right-text">
                                        <% course.onlineCourse.includedText.right.forEach(item=> { %>

                                            <li><i class="<%= item.icon %>"></i><span>
                                                    <%= item.text %>
                                                </span></li>

                                            <% }) %>
                                    </ul>


                                </div>
                            </div>
                            <div class="course-item-price">
                                <!-- <p>Course Price</p> -->
                                <ul>
                                    <li>
                                        <%= course.onlineCourse.price.regularPrice %>
                                    </li>
                                    <li class="badge text-bg-dark">
                                        <%= course.onlineCourse.price.discountedPrice %>
                                    </li>
                                    <!-- <li>
                                        <%= course.onlineCourse.price.discountPercentage %>
                                    </li> -->
                                </ul>
                            </div>
                            <hr>
                            <div class="course-item-button">
                                <a href="/courseview/<%= course.id %>"> <button
                                        class="exploreNow">Explore</button></a>
                                <a href="<%= course.courseListPage.links.buyNow %>"> <button class="buyNow">Buy
                                        Now</button></a>

                            </div>

                        </div>
                    </div>
                    <% }) %>




            </div>
        </div>
    </section>
    <!-- course area end -->

    <!-- course area start(offlne)-->
